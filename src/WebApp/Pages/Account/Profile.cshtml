@page
@using WebApp.Model.OrderModel
@model WebApp.Pages.Account.Profile

@{
}

<h1>Profile</h1>

<div>
    <dl>
        <dt>User ID:</dt>
        <dd>@Model.UserDto.ID</dd>

        <dt>Username:</dt>
        <dd>@Model.UserDto.Email</dd>

        <dt>Email:</dt>
        <dd>@Model.UserDto.Email</dd>

        <dt>Status Email Confirmed: </dt>
        <dd>@Model.appuser.EmailConfirmed</dd>
    </dl>
</div>
<div>
    @if (Model.orderModel != null)
    {
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>UserName</th>
                <th>Name Coin</th>
                <th>Price Coin</th>
                <th>Amount</th>
                <th>TotalPrice</th>
                <th>card Name</th>
                <th>card Number</th>
                <th>Time</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.orderModel)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.CoinName</td>
                    <td>@item.PriceCoin</td>
                    <td>@item.Amount</td>
                    <td>@item.TotalPrice</td>
                    <td>@item.CardName</td>
                    <td>@item.CardNumber</td>
                    <td>@item.DateTime?.ToString("M/d/yyyy HH:mm:ss")</td>
                    </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No Orders</p>
    }
</div>