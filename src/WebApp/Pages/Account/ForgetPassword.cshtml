@page
@model WebApp.Pages.Account.ForgetPassword

@{
}

@if (Model.Message == "لینک تغییر پسورد برای شما ارسال شد.")
{
    <p>لینک تغییر پسورد برای شما ارسال شد.</p>
}
else
{
    <form method="post">
        <input class="form-group" asp-for="forgetPasswordModels.Email"/>
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Send Email"/>
        </div>
    </form>
}