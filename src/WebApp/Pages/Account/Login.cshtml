@model WebApp.Pages.Account.Login

@{
}


<h3>User Login</h3>
<br/>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="LoginModel.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="LoginModel.UserName" class="form-control"/>
                <span class="text-danger" asp-validation-for="LoginModel.UserName"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="LoginModel.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="LoginModel.Password" class="form-control"/>
                <span class="text-danger" asp-validation-for="LoginModel.Password"></span>
            </div>
        </div>
        @* <div class="mb-3 row form-check"> *@
        @*     <div class="col-2"> *@
        @*         <input type="checkbox" class="form-check-input" asp-for="Credential.RememberMe" /> *@
        @*         <label class="form-check-label" asp-for="Credential.RememberMe"></label> *@
        @*     </div> *@
        @*     <div class="col-5"> *@
        @*     </div> *@
        @* </div> *@
        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
            <div class="col-5">
                <a class="btn btn-link" href="/Account/Register">Sign Up</a>
            </div>
        </div>
        <br/>
        <p>
            Social Media Logins:
            <div class="form-group">
                @foreach (var provider in Model.ExternalLoginProviders)
                {
                    <button type="submit"
                            asp-page-handler="LoginExternally"
                            name="provider"
                            value="@provider.Name"
                            class="btn btn-primary">
                        Login with @provider.DisplayName
                    </button>
                }
            </div>
        </p>
    </form>
</div>