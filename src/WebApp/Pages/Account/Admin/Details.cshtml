@page
@model WebApp.Pages.Account.Admin.DetailsModel
@{
}
@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

@if (Model.appUser != null)
{
    <dl>
        <dt>User ID:</dt>
        <dd>@Model.appUser.Id</dd>

        <dt>Username:</dt>
        <dd>@Model.appUser.Email</dd>

        <dt>Name: </dt>
        <dd>@Model.appUser.Name</dd>

        <dt>Email:</dt>
        <dd>@Model.appUser.Email</dd>

        <dt>Status Email Confirmed: </dt>
        <dd>@Model.appUser.EmailConfirmed</dd>
        <form method="post">
        <dt>Status Role: </dt>
        <dd>@Model.appUser.Role</dd>

        <input asp-for="appUser.Role" class="form-control">


        <a asp-page="/account/admin/panel" class="btn btn-dark ml-2">Back</a>
        <button class="btn btn-success" type="submit">Update</button>

        </form>
    </dl>
}
else
{
    <p>User not found!</p>
}