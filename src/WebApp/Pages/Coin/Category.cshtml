@page
@model WebApp.Pages.Coin.Category

@{
}

<div class="container text-center">
    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        @foreach (var item in Model.cate.CoinCategories)
        {
            <div class="card mb-3" style="width: 14rem;">
                <div class="card-body">
                    <div class="col">
                        <div class="p-1">
                            <a class="btn link-success link-underline-dark" asp-page="/coin/category/coinid" asp-route-id="@item.Id">
                                @item.name
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>